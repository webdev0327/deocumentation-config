<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Swagger UI</title>
    <link rel="stylesheet" type="text/css" href="./swagger-ui.css">
    <style>
        .swagger-ui .dialog-ux .backdrop-ux {
            background: none;
        }

        .swagger-ui .dialog-ux .modal-ux {
            border: 1px solid #cccccc;
        }

        .swagger-ui .scheme-container {
            background: none;
            box-shadow: none;
        }
    </style>
</head>
<body>
<div id="swagger-ui"></div>
<script src="./swagger-ui-bundle.js"></script>
<script>
    window.onload = function() {
        const openApiFileName = '{{filename}}';
        const prefix = window.location.pathname.split('/content')[0];
        let url = `${window.location.origin}/static/${openApiFileName}`;
        if (prefix !== '') {
            url = `${window.location.origin}${prefix}/static/${openApiFileName}`;
        }
        window.ui = SwaggerUIBundle({
            url: url,
            dom_id: '#swagger-ui',
            deepLinking: true,
            presets: [
                SwaggerUIBundle.presets.apis
            ],
            plugins: [
                SwaggerUIBundle.plugins.DownloadUrl
            ],
            layout: 'BaseLayout'
        });
    };
</script>
</body>
</html>
